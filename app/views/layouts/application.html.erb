<!DOCTYPE html>
<html lang="en">
  <head>
    <title>YearRoadmap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <p class='notice'><%= notice %></p>
    <p class='alert'><%= alert %></p>
    <ul>
      <li><%= link_to 'Rockmap', root_path %></li>

      <% if user_signed_in? %>
        <li><%= link_to 'Profile', edit_user_registration_path %></li>
        <li><%= link_to 'Rock Out', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Rock Up', new_user_registration_path %></li>
        <li><%= link_to 'Rock In', new_user_session_path %></li>
      <% end %>
    </ul>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
